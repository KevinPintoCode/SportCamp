<% layout('layouts/boilerplate') %>
<h1>Events</h1>
<div>
  <a class="btn btn-primary mb-3" href="/events/new">Post a new Event</a>
</div>

<% for(let event of events){ %>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" alt="" src="<%= event.image%>" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= event.title %></h5>
        <p class="card-text"><%= event.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= event.location %></small>
        </p>
        <a class="btn btn-primary" href="/events/<%=event._id %>"
          >Event details</a
        >
        <div class="card-text"></div>
      </div>
    </div>
  </div>
</div>
<% } %>
