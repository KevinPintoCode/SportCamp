<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center mb-3">Edit <%= sportground.title %> Sportground</h1>
  <div class="col-md-6 offset-md-3">
    <form
      novalidate
      multiple
      class="needs-validation"
      class="mb-3"
      action="/sportgrounds/<%=sportground._id%>?_method=PUT"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="name">Title</label>
        <input
          required
          class="form-control"
          type="text"
          id="name"
          name="sportgrounds[title]"
          value="<%=sportground.title %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          required
          class="form-control"
          type="text"
          id="location"
          name="sportgrounds[location]"
          value="<%=sportground.location %>"
        />
      </div>
      <div class="mb-3">
        <div>
          <label class="form-label" for="image">Add Images</label>
          <input
            class="form-control mb-3"
            type="file"
            name="image"
            id="image"
            multiple
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="players">Number of Players</label>
        <input
          required
          class="form-select"
          type="number"
          id="players"
          name="sportgrounds[players]"
          value="<%= sportground.players %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          required
          class="form-control"
          type="text"
          id="description"
          name="sportgrounds[description]"
        >
<%= sportground.description %>
      </textarea
        >
      </div>
      <p>Delete Images</p>
      <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
        <% sportground.images.forEach(function(img, i) { %>
        <div class="col">
          <div class="card">
            <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="" />
            <div class="card-img-overlay text-end pt-1 pe-2">
              <label class="visually-hidden" for="image-<%= i %>"
                >Delete Image</label
              >
              <input
                type="checkbox"
                id="image-<%=i%>"
                name="deleteImages[]"
                value="<%=img.filename%>"
              />
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Update Sportground</button>
      </div>
    </form>
    <hr />
    <a
      class="btn btn-success"
      role="button"
      style="text-decoration: none"
      href="/sportgrounds"
      >Back to Sportgrounds</a
    >
  </div>
</div>
