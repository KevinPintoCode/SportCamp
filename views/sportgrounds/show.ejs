<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= sportground.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= sportground.title %></h5>
        <p class="card-text"><%= sportground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= sportground.location %></li>
      </ul>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted">
          <%= sportground.author.username %> posted this Sportground.
        </li>
      </ul>
      <% if (currentUser && sportground.author.equals(currentUser._id)){ %>
      <div class="card-body">
        <a
          class="btn btn-primary"
          href="/sportgrounds/<%=sportground._id %>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/sportgrounds/<%=sportground._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
      <div class="card-footer"><%= sportground.players %> players</div>
    </div>
  </div>
  <div class="col-6">
    <% if(currentUser){ %>
    <h2 class="">Sportground Reviews</h2>
    <form
      novalidate
      class="mb-3 needs-validation"
      action="/sportgrounds/<%=sportground._id%>/reviews"
      method="POST"
    >
      <div>
        <label class="form-label" for="review">Rating</label>
        <input
          min="1"
          max="5"
          class="form-range"
          type="range"
          name="review[rating]"
          id="rating"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Write a Review</label>
        <textarea
          required
          class="form-control validated-"
          name="review[body]"
          id="body"
          cols="10"
          rows="4"
        ></textarea>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %> <% for(let review of sportground.reviews){ %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title">Rating : <%= review.rating %></h5>
        <h6 class="card-subtitle mb-2 text-muted">
          By <%= review.author.username %>
        </h6>
        <p class="card-text"><%= review.body %></p>
        <% if (currentUser && review.author.equals(currentUser._id)){ %>
        <form
          action="/sportgrounds/<%=sportground._id%>/reviews/<%=review._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% } %>
      </div>
    </div>
    <% } %>
  </div>
</div>
