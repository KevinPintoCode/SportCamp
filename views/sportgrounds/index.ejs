<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 500px"></div>
<h1>Sportgrounds</h1>
<div>
  <a class="btn btn-primary mb-3" href="/sportgrounds/new"
    >Post a new Sportground</a
  >
</div>
<% for(let sportgrounds of sportground){ %>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <% if (sportgrounds.images.length){ %>
      <img class="img-fluid" alt="" src="<%= sportgrounds.images[0].url%>" />
      <% } else {%>
      <img
        class="img-fluid"
        alt=""
        src="https://res.cloudinary.com/dvkarqghn/image/upload/v1692638350/Sportground/tzbjmjbrthpeji3b6fkx.jpg"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= sportgrounds.title %></h5>
        <p class="card-text"><%= sportgrounds.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= sportgrounds.location %></small>
        </p>
        <a class="btn btn-primary" href="/sportgrounds/<%=sportgrounds._id %>"
          >Sportground details</a
        >
        <div class="card-text"></div>
      </div>
    </div>
  </div>
</div>
<% } %>
<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN %>";
  const sportground = {features: <%- JSON.stringify(sportground) %>}
</script>
<script src="/javascripts/clustermap.js"></script>
