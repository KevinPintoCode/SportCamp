<% layout('layouts/boilerplate') %>
<h1>Sportgrounds</h1>
<div>
  <a class="btn btn-primary mb-3" href="/sportgrounds/new"
    >Post a new Sportground</a
  >
</div>
<% for(let sportgrounds of sportground){ %>
<div class="card" mb-3>
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" alt="" src="<%= sportgrounds.images[0].url%>" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= sportgrounds.title %></h5>
        <p class="card-text"><%= sportgrounds.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= sportgrounds.location %></small>
        </p>
        <a class="btn btn-primary" href="/sportgrounds/<%=sportgrounds._id %>"
          >Sportground details</a
        >
        <div class="card-text"></div>
      </div>
    </div>
  </div>
</div>
<% } %>
