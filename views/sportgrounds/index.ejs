<% layout('layouts/boilerplate') %>
<div id="clustermap"></div>
<div>
  <div class="mt-3 mb-3">
    <h1>Sportgrounds</h1>
  </div>
  <% for(let sportgrounds of sportground){ %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if (sportgrounds.images.length){ %>
        <img
          crossorigin="anonymous"
          class="img-fluid"
          alt=""
          src="<%= sportgrounds.images[0].url%>"
        />
        <% } else {%>
        <img
          crossorigin="anonymous"
          class="img-fluid"
          alt=""
          src="https://res.cloudinary.com/dvkarqghn/image/upload/v1692638350/Sportground/tzbjmjbrthpeji3b6fkx.jpg"
        />
        <% } %>
      </div>
      <div class="col-md-8 d-flex flex-column">
        <div class="card-body d-flex flex-column justify-content-between">
          <div>
            <h5 class="card-title"><%= sportgrounds.title %></h5>
            <p class="card-text"><%= sportgrounds.description %></p>
            <p class="card-text">
              <small class="text-muted"><%= sportgrounds.location %></small>
            </p>
          </div>
          <div class="d-flex justify-self-end">
            <a
              class="btn btn-success"
              href="/sportgrounds/<%=sportgrounds._id %>"
              >Sportground details</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>
<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN %>";
  const sportground = {features: <%- JSON.stringify(sportground) %>}
</script>
<script src="/javascripts/clustermap.js"></script>
